.article-list,
.talk-list
    list-style-type none
    margin 0 0 4em
    padding 0

    > li
        margin-bottom 1em

.talk-list
    > li
        margin-bottom 3em

    ul
        list-style-type square

    h3
        margin-bottom .1rem

.article-deck,
.talk-deck
    display block
    font-size: 0.85rem
    font-weight 300
    letter-spacing .5px
    color $darkgray

    h3 + &
        margin-bottom 0

@media screen and (max-width $mobile-width)
    .talk-deck,
    .talk-list ul
        line-height 2
