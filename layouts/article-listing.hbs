<!DOCTYPE html>
<html lang="en">
{{> html-head }}

<body>
    {{> header }}

    <main>
        <div class="container">

            <h1>Articles</h1>
            <ul class="article-list" lang="en">
                {{#each collections.articles}}
                    {{#equals lang 'en'}}
                        {{> article-listing-detail }}
                    {{/equals}}
                {{/each}}
            </ul>

        </div>
    </main>

    {{> footer }}
</body>
</html>
