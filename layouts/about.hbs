<!DOCTYPE html>
<html lang="en">
{{> html-head }}

<body>
    {{> header }}

    <main>
        <div class="container">

            <div class="grid-container">
                <div>
                    {{{ contents }}}
                </div>
                <aside>
                    <h2>Skills</h2>
                    {{#each skills}}
                        <h4>{{ section }}</h4>
                        <ul class="tag-list">
                            {{#each list}}
                                <li>{{{ . }}}</li>
                            {{/each}}
                        </ul>
                    {{/each}}
                </aside>
            </div>

            <h2>Recent projects</h2>
            <ul class="project-list">
                {{#each collections.projects}}
                    {{> project-listing-detail }}
                {{/each}}
            </ul>

        </div>
    </main>

    {{> footer }}
</body>

</html>
