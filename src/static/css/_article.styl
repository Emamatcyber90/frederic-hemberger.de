.article-meta
    text-indent 0
    font-size .875rem
    letter-spacing 1px
    color $darkgray
    line-height 1.618rem

.article-intro
    font-size 1.2rem // = 24px

article
    .article-deck
        margin-bottom -.2rem

    h1
        margin-bottom 0

    header
        border-bottom 1px solid $lightgray
        margin-bottom 3rem
        padding-bottom .295rem

code
    color $darkgray

pre
    background-color #002b36
    border-radius 3px
    padding 0.75em 1.2em
    font-size 0.8em

    code
        color #f0f0f0

blockquote
    position relative
    border-bottom 1px solid #ccc
    padding-left 2.5rem
    margin: 2em 0

    &::before
        content 'â€œ'
        position absolute
        left 0
        top -.15em
        font-size 5rem
        line-height 1
        color #ccc

