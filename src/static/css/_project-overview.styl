.grid-container
  display grid
  grid-column-gap 3rem
  grid-template-columns 66% 33%
  margin-bottom 1rem

@media screen and (max-width $single-column-width)
  .grid-container
    display block

  .grid-2-3 + ul
    margin-top: 1em

.grid-3-3
  grid-column-start 1
  grid-column-end 3

aside h2:first-child
    margin-top 0

.skill-list
  list-style-type none
  margin 0
  padding 0
  font-size 0.889rem
  line-height 1.69

  li::after
    content ", "

  li:last-child::after
    content ""

  li
    display inline
