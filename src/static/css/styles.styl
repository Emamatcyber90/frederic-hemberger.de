@import '_variables'
@import '_webfonts'
@import '_layout'
@import '_navigation'
@import '_lists'
@import '_article-overview'
@import '_project-overview'

html
  box-sizing border-box
  padding 1em

  font-size 18px
  line-height 1.5
  font-family 'Source Sans Pro', Open Sans, Roboto, Helvetica, Arial, sans-serif
  font-weight 300
  background #fff
  color $darkblue //#343a3e

  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%

  @media screen and (max-width $single-column-width)
    font-size 16px

body
  > footer
    margin-top 5em
    margin-bottom 2em

img
  max-width 100%

h1,
h2,
h3,
h4,
h5
  font-weight normal
  margin-bottom .5em
  // color $red

  a
    color inherit

h1
  font-size 2.0em
  margin-bottom 0

h2
  font-size 1.5em
  margin-top 1.5em

h3
  margin-top 1em


a,
a:link,
a:visited,
a:active
  color $red
  text-decoration none
  transition color 1s ease-out

a:hover,
a:active,
a.active
  color $darkblue

a.button
  display inline-block
  margin .25em 0
  padding .5em 0.75em

  font-size 1.2em
  line-height 1
  text-align center
  white-space nowrap
  vertical-align baseline

  border-radius .125rem
  background-color hsl(346, 84%, 48%)
  background-image linear-gradient(180deg, hsl(346, 84%, 48%), hsl(331, 84%, 48%))
  box-shadow 0 0 1px hsla(346, 84%, 34%, 1)
  color inherit

.p-name > a
  color inherit
  cursor inherit
  pointer-events none

hr
  border 1px solid $lightgray
  border-bottom transparent

strong.normal
  font-weight normal

.visually-hidden
  position absolute
  top -9999px
  left -9999px
  line-height 0
  height 0
  font-size 0

.home-intro
  margin-top 140px
  font-size 1.9rem // = 38px

  @media screen and (max-width $mobile-width)
    font-size 1.5rem // = 30px
    line-height 1.5

  h1
    font-size inherit
    margin-bottom 1em

  p
    font-size 1.5rem // = 30px

  span
    color $darkgray
    display block
    font-weight 300
    line-height 1.2
